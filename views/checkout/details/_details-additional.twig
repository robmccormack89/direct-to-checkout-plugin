{% if fn('apply_filters', 'woocommerce_enable_order_notes_field', 'yes' == fn('get_option', 'woocommerce_enable_order_comments', 'yes') ) %}
  <li class="checkout-content checkout-additional">
    <div class="additional">
      <div class="woocommerce-additional-fields">
        {% do action('woocommerce_before_order_notes', checkout) %}

          {% if fn('wc_ship_to_billing_address_only') or not cart.needs_shipping() %}
            <h3>{{ _x('Additional information', 'Checkout', 'direct-to-checkout')|e('esc_html') }}</h3>
          {% endif %}

      		<div class="woocommerce-additional-fields__field-wrapper">
            {% for key,field in checkout.get_checkout_fields('order') %}
              {{fn('woocommerce_form_field', key, field, checkout.get_value(key))}}
            {% endfor %}
      		</div>

        {% do action('woocommerce_after_order_notes', checkout) %}
      </div> 
       
      <div class="uk-margin-top">
        <a class="go-back uk-button uk-button-text uk-margin-small-right" uk-switcher-item="previous">
          {{ _x('Go back', 'Checkout', 'direct-to-checkout')|e('esc_html') }}
        </a>
        <a class="proceed-from-additional uk-button uk-button-primary uk-button-small" uk-switcher-item="next">
          {{ _x('Continue', 'Checkout', 'direct-to-checkout')|e('esc_html') }} <i class="fas fa-angle-right"></i>
        </a>
      </div>
      
    </div>
    {% do action('woocommerce_checkout_after_customer_details') %}
  </li>
{% endif %}