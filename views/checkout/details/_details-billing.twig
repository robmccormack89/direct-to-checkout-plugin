<li class="checkout-content checkout-billing">
  {% do action('woocommerce_checkout_before_customer_details', checkout) %}
  <div class="billing">
    
    {# do action('woocommerce_checkout_billing') #}
    
    <div class="woocommerce-billing-fields">
      {% if fn('wc_ship_to_billing_address_only') and cart.needs_shipping() %}

    		<h3>{{ _x('Billing &amp; Shipping', 'Checkout', 'direct-to-checkout')|e('esc_html') }}</h3>

      {% else %}

    		<h3>{{ _x('Billing details', 'Checkout', 'direct-to-checkout')|e('esc_html') }}</h3>

      {% endif %}

      {% do action('woocommerce_before_checkout_billing_form', checkout) %}

    	<div class="woocommerce-billing-fields__field-wrapper">
        {% set fields = checkout.get_checkout_fields('billing') %}

        {% for key,field in fields %}
          {{fn('woocommerce_form_field', key, field, checkout.get_value(key))}}
        {% endfor %}
    	</div>

      {% do action('woocommerce_after_checkout_billing_form', checkout) %}
    </div>

    {% if checkout.is_registration_enabled() and not fn('is_user_logged_in') %}
    	<div class="woocommerce-account-fields">
        {% if not checkout.is_registration_required() %}

    			<p class="form-row form-row-wide create-account">
    				<label class="woocommerce-form__label woocommerce-form__label-for-checkbox checkbox">
    					<input 
              class="woocommerce-form__input woocommerce-form__input-checkbox input-checkbox" 
              id="createaccount" 
              {{ fn('checked', (true == checkout.get_value('createaccount') or true == fn('apply_filters', 'woocommerce_create_account_default_checked', false)), true) }} 
              type="checkbox" 
              name="createaccount" value="1" /> 
              <span>{{ _x('Create an account?', 'Checkout', 'direct-to-checkout')|e('esc_html') }}</span>
    				</label>
    			</p>

        {% endif %}

        {% do action('woocommerce_before_checkout_registration_form', checkout) %}

        {% if checkout.get_checkout_fields('account') %}

    			<div class="create-account">
            {% for key,field in checkout.get_checkout_fields('account') %}
              {{fn('woocommerce_form_field', key, field, checkout.get_value(key))}}
            {% endfor %}
    				<div class="clear"></div>
    			</div>

        {% endif %}

        {% do action('woocommerce_after_checkout_registration_form', checkout) %}
    	</div>
    {% endif %}
    
    <div class="checkout-next-prev-buttons uk-margin-top">
      <a id="backBrowser" class="go-back uk-button uk-button-default uk-button-small" href="{{back_link|e('esc_url')}}">{{ _x('Back', 'Checkout', 'direct-to-checkout')|e('esc_html') }}</a>
      <a id="proceedPayment" class="proceed-to-payment uk-button uk-button-primary uk-button-small" uk-switcher-item="next">{{ _x('Continue', 'Checkout', 'direct-to-checkout')|e('esc_html') }}</a>
    </div>
  </div>
</li>